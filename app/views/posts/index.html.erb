<p id="notice"><%= notice %></p>

<h1>Your List</h1>

<table>
  <thead>
    <tr>
      <th>Item</th>
      <th>Expiration</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <!-- Sort all the posts  -->
  <tbody>
    <% @posts.sort_by{|post| post.Expiration}.each do |post| %>
      <tr>
        <td><%= post.Item %></td>
        <td><%= post.Expiration%></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %>
      </tr>
    <% end %>
  <tbody>
<table>
  
<br>

<%= link_to 'New Post', new_post_path %>
